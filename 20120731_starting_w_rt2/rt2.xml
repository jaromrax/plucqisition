 <prescription>
   <!-- threads> number of thread section/ devices controled  </threads -->
   <threads> 2  </threads>
   <!-- autostart> startup option on/off    values  0/1 </autolisten -->
   <autostart>1</autostart>
   <!-- default_t> bit pattern for default thread/device on eg 0,1,3,7  </default_t -->
   <default_t> 3  </default_t>
<!-- begin begin begin begin begin begin begin begin begin  -->
<!-- DICTIONARY: $runnumber    $outfile     $killgrandchildren  -->
   <thread>
     <number>0</number>
     <name> TEST  </name>
     <namel>Listen_test</namel>
     <init>
       echo TEST: RUN==$runnumber 
     </init>
     <start>
       echo TEST START
     </start>
     <stop>
       echo TEST STOP
     </stop>
     <listen> 
         echo TEST 1 $outfile;
	 date;
	 sleep 1;
	 date;
	 sleep 1;
     </listen>
     <quit>
       echo TEST QUITS
     </quit>
   </thread>
<!-- end end end end end end end end end end end end -->


