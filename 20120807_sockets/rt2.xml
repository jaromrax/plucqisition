 <prescription>
   <!-- threads> number of thread section/ devices controled  </threads -->
   <threads> 2  </threads>
   <!-- autostart> startup SpecFunc option on/off    values  0/1 </autolisten -->
   <!-- SFautostart>1</SFautostart -->
   <!-- SFautostop>1</SFautostop -->
   <!-- default_t> bit pattern for default thread/device on eg 0,1,3,7  </default_t -->
   <!-- default_t> 3  </default_t-->
   <status_text>  Generates file 'text' and sends it to the localhost  </status_text>
   <status_text_size> 10 </status_text_size>
<!-- begin begin begin begin begin begin begin begin begin  -->
<!-- DICTIONARY: $runnumber    $outfile     $killgrandchildren  $setstatustext 
 $killgrandchildren possible but deprecated - I use KillOnStop SFautostop
at least echo must be there
 -->
   <thread>
     <number>0</number>
     <default_on>1 </default_on>
     <name> Text Generator  </name>
     <namel> Gen_TEXT </namel>
     <init>     </init>
     <start>
       $setstatustext  running ....
     </start>
     <stop>
        $setstatustext  STOPped;
	echo STOPPED > $pidM;
    </stop>
    <spec_function_onstart> 1</spec_function_onstart>
    <spec_function_onstop>  1</spec_function_onstop>
    <spec_function_retrig>  0</spec_function_retrig> 
    <spec_function> 
 for ((i=0;i &lt; 8640001;i++)); do 
	 sleep 1; 
	 TT=\`date +%s\`;
	 echo \$TT \$t \$i \$i  >> text;
         echo \$TT \$t \$i \$i  > $pidM;
 done
    </spec_function>
     <quit>
     </quit>
   </thread>
<!-- end end end end end end end end end end end end -->


